<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_chat_view"
        android:background="@drawable/chat_appearence"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/left_chat_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="?attr/colorAccent"
            android:id="@+id/left_chat_text_view"
            android:textSize="18dp"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/right_chat_view"
        android:background="@drawable/chat_appearence2"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="?attr/colorAccent"
            android:id="@+id/right_chat_text_view"
            android:textSize="18dp"
            />

    </LinearLayout>

</RelativeLayout>